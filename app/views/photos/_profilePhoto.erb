<div class="col-md-7">
<!-- Photo Slider -->

<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox" >


   <% if @photo.user.images.empty? %>
     <%= image_tag "default1.png" %>
  <% else %>
    <% @photo.user.images.each do |image| %>
      <% if @photo.user.images.index(image) == 0 %>
        <div class="item active">
          <%= image_tag image.picture %>
        <% if @photo.user == current_user %>
          <%= link_to (image_tag 'delete64.png'), image_destroy_path(id: image.id), class: "delete_b", method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
        </div>



      <% else %>
        <div class="item">
          <%= image_tag image.picture %>
          <% if @photo.user == current_user %>
          <%= link_to (image_tag 'delete64.png'), image_destroy_path(id: image.id), class: "delete_b", method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </div>
      <% end %>
    <% end %>
  <% end %>
  <% if @photo.user == current_user %>
   <%= render 'users/userImages'%>
  <% end %>
</div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>

  </div>
</div>

<div class="col-md-5"><h3><%= @photo.user.name %></h3>
    <%= form_tag charges_path do %>
    <article>
      <label class="amount">
        <span>Day Rate: $500.00</span>
      </label>
    </article>

  <script src="https://checkout.stripe.com/v2/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Talent booking"
          data-amount="50000"
          data-label="Book ME!"
          data-image="/msb-red.png" ></script>
  <% end %>
    <h4><%= @photo.user.state %></h4>
  </div>



  <div class="col-md-5">
    <p class="col-md-12">
      <h4 class="underline">Bio</h4><br>
      <%= @photo.user.description %>
    </p>

    <h4 class="col-md-12 underline">Details</h4>

    <p class="col-md-6" style="text-align:left">
      <strong>Edu:</strong>
      <%= @photo.education %>
    </p>

    <p class="col-md-6" style="text-align:left">
      <strong>Exp:</strong>
      <%= @photo.experience %>
    </p>

    <p class="col-md-6" style="text-align:left">
      <strong>Equipment:</strong>
      <%= @photo.equipment %>
    </p>

    <p class="col-md-6" style="text-align:left">
      <strong>Day Rate:</strong>
      <%= @photo.rate %>
    </p>

    <br><br><br>

    <div class="col-md-12">
      <h4 class="underline">Availability</h4>
    </div>

    <div class="col-md-12">
      <h4 class="col-md-12" id='calendar' data-uid="<%= @photo.user.id %>"></h4>
    </div>
    <div class="col-md-12">
      <button class="payBtn btn btn-xl" id="messageBtn">Message</button>
      <br><br>
      <div class="messDiv">
      <%= form_for @message do |f| %>
        <div>
          <%= f.hidden_field :reciever_id, value: @photo.user.id %>
        </div>
        <div>
          <%= f.text_field :title, class: "form-control input-sm", placeholder: "Title" %>
        </div>
        <div>
          <%= f.text_area :body, class: "form-control input-sm", placeholder: "Message" %>
        </div>
        <br>
          <%= f.submit "Send", :class => "btn btn-xl" %>
        <% end %>
      </div>
    <br>
    <% if @photo.user == current_user %>
      <div>
        <%= link_to 'Edit', edit_photo_path(@photo), class: "payBtn btn btn-xl" %>
      </div>
    <% end %>
  </div>
  </div>
</div>
