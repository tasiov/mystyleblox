<h1>Listing Hairs</h1>

<%= render 'hairs' %>

<br>

<%= form_tag(hairs_path, method: 'get') do %>
  <p>
  	Style:
    <%= select_tag( :style, options_for_select(['Beauty', 'Fashion', 'Theatre', 'Television', 'Film', 'Personal Services']), include_blank: true) %>
    Education:
    <%= select_tag( :education, options_for_select(['On the Job', 'Some Schooling', 'Degree/Certification']), include_blank: true ) %>
    Equipment:
    <%= select_tag( :equipment,  options_for_select(['Minimum', 'Moderate', 'Full Set']), include_blank: true ) %>
 	Experience:
    <%= select_tag( :experience,  options_for_select(['No Experience', 'Some Experience', 'Professionals']), include_blank: true) %>
    Rate:
    <%= select_tag( :rate,   options_for_select([['-$100', 100], ['$100-$500', 500], ['$500-$1k', 1000], '$1k-$5k', '$5k+']), include_blank: true) %>

    <%= submit_tag "Search", name: nil %>
  </p>
<% end %>

