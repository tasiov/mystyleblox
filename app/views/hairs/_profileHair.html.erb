<div class="col-md-7">
<!-- Photo Slider -->

<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">


 <!-- Indicators -->
  <% @hair.user.images.each do |image| %>
    <ol class="carousel-indicators">
         <% if @hair.user.images.index(image) == 0 %>
             <li class='active'>
         <% else %>
              <li>
         <% end %>
            </li>
         </ol>
  <% end %>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox" >


   <% if @hair.user.images.empty? %>
     <%= image_tag "default1.png" %>
  <% else %>
    <% @hair.user.images.each do |image| %>
      <% if @hair.user.images.index(image) == 0 %>
        <div class="item active">
          <%= image_tag image.picture %>
        <% if @hair.user == current_user %>
          <%= link_to (image_tag 'delete64.png'), image_destroy_path(id: image.id), class: "delete_b", method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
        </div>



      <% else %>
        <div class="item">
          <%= image_tag image.picture %>
          <% if @hair.user == current_user %>
          <%= link_to (image_tag 'delete64.png'), image_destroy_path(id: image.id), class: "delete_b", method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </div>
      <% end %>  
    <% end %>
  <% end %>
  <% if @hair.user == current_user %>
   <%= render 'users/userImages'%>
  <% end %>
</div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>

  </div>
</div>

  <div class="col-md-5"><%= @hair.user.name %>
    <h4><%= @hair.user.state %></h4>
  </div>

  <div class="col-md-5">
    <h4>Bio</h4>
    <p class="col-md-5">

    <p class="col-md-12">
      <strong>About Me:</strong>
      <%= @hair.user.description %>
    </p>

    <h4 class="col-md-12">Details</h4>

  <p class="col-md-12">
    <strong>Education:</strong>
    <%= @hair.education %>
  </p> 

    <p class="col-md-12">
      <strong>Exp:</strong>
      <%= @hair.experience %>
    </p>

    <p class="col-md-12">
  <strong>Equipment:</strong>
  <%= @hair.equipment %>
   </p>

    <p class="col-md-12">
      <strong>Day Rate:</strong>
      <%= @hair.rate %>
    </p>

  <br><br><br>

  <h4 class="col-md-12" id='calendar' data-uid="<%= @hair.user.id %>">
  </h4>

    <div class="col-md-4">
     <%= link_to 'Edit', edit_hair_path(@hair), class: "btn btn-xl" %>
  </div>

    <div class="col-md-4">
     <%= link_to 'Pay', charges_path, class: "btn btn-xl" %>
  </div>

</div>
</div>
