<%= form_for(@mua) do |f| %>
  <% if @mua.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@mua.errors.count, "error") %> prohibited this mua from being saved:</h2>

      <ul>
      <% @mua.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :style %><br>
    <%= f.select :style, ["Beauty","Fashion","Theatre","Television","Body and Face Paint","Film and Movies","Personal Services"] %>
  </div>
  <div class="field">
    <%= f.label :education %><br>
    <%= f.select :education, ["On the Job","Some Schooling","Degree Certified"] %>
  </div>
  <div class="field">
    <%= f.label :clients %><br>
    <%= f.text_field :clients "Separated by commas" %>
  </div>
  <div class="field">
    <%= f.label :equipment %><br>
    <%= f.select :equipment, ["Minimum","Moderate","Full Set"] %>
  </div>
    <div class="field">
    <%= f.label :experience %><br>
    <%= f.select :experience, ["No Experience","Some Experience","Experienced","Professional"] %>
  </div>
  <div class="field">
    <%= f.label :rate %><br>
    <%= f.select :rate, ["$20-$99", "$100-$499","$500-$999","$1000-$4999","$5000+"] %>
  </div>
  <div class="field">
    <%=f.hidden_field :user_id, value: session[:user_id] %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
