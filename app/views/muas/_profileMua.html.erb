<div class="col-md-7">
<!-- Photo Slider -->

<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">


 <!-- Indicators -->
  <% @mua.user.images.each do |image| %>
    <ol class="carousel-indicators">
         <% if @mua.user.images.index(image) == 0 %>
             <li class='active'>
         <% else %>
              <li>
         <% end %>
            </li>
         </ol>
  <% end %>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox" >


   <% if @mua.user.images.empty? %>
     <%= image_tag "default1.png" %>
  <% else %>
    <% @mua.user.images.each do |image| %>
      <% if @mua.user.images.index(image) == 0 %>
        <div class="item active">
          <%= image_tag image.picture %>
        <% if @mua.user == current_user %>
          <%= link_to (image_tag 'delete64.png'), image_destroy_path(id: image.id), class: "delete_b", method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
        </div>



      <% else %>
        <div class="item">
          <%= image_tag image.picture %>
          <% if @mua.user == current_user %>
          <%= link_to (image_tag 'delete64.png'), image_destroy_path(id: image.id), class: "delete_b", method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </div>
      <% end %>
    <% end %>
  <% end %>
  <% if @mua.user == current_user %>
   <%= render 'users/userImages'%>
  <% end %>
</div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>

  </div>
</div>


<div class="col-md-5"><h3><%= @mua.user.name %></h3>
    <%= form_tag charges_path do %>
    <article>
      <label class="amount">
        <span>Day Rate: $500.00</span>
      </label>
    </article>

  <script src="https://checkout.stripe.com/v2/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Talent booking"
          data-amount="50000"
          data-label="Book ME!"
          data-image="/msb-red.png" ></script>
  <% end %>
    <h4><%= @mua.user.state %></h4>
  </div>



  <div class="col-md-5">
    <p class="col-md-12">
      <h4 class="underline">Bio</h4><br>
      <%= @mua.user.description %>
    </p>

    <h4 class="col-md-12 underline">Details</h4>

    <p class="col-md-6" style="text-align:left">
      <strong>Edu:</strong>
      <%= @mua.education %>
    </p>

    <p class="col-md-6" style="text-align:left">
      <strong>Exp:</strong>
      <%= @mua.experience %>
    </p>

    <p class="col-md-6" style="text-align:left">
      <strong>Equipment:</strong>
      <%= @mua.equipment %>
    </p>

    <p class="col-md-6" style="text-align:left">
      <strong>Day Rate:</strong>
      <%= @mua.rate %>
    </p>

    <br><br><br>

    <div class="col-md-12">
      <h4 class="underline">Availability</h4>
    </div>

    <div class="col-md-12">
      <h4 class="col-md-12" id='calendar' data-uid="<%= @mua.user.id %>"></h4>
    </div>


    <div class="col-md-4">
      <%= link_to 'Edit', edit_mua_path(@mua), class: "payBtn btn btn-xl" %>
    </div>

  </div>
</div>
